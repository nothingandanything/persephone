package com.web.dao.impl;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import com.web.dao.ProductDao;
import com.web.entity.Drink;
import com.web.entity.User;
import com.web.util.JDBCUtil;

public class ProductDaoImpl implements ProductDao {
	/**
	 * 根据字段搜索总条数
	 */
	@Override
	public Integer findDrinkByNameAllCount(String searchfield) {
		// 定义总条数
		Integer totalCount = 0;
		
		try {
			// 获取数据库连接对象
			Connection conn = JDBCUtil.getConnectinon();
			
			// 编写sql
			String sql = "SELECT COUNT(*) FROM drink WHERE DrinkName LIKE '%"
					+ searchfield + "%'";
			
			// 编译sql
			PreparedStatement ps = conn.prepareStatement(sql);
			
			// 执行查询
			ResultSet rs = ps.executeQuery();
			
			// 循环结果集
			while (rs.next()) {
				totalCount = rs.getInt(1);
			}
			
			// 关闭
			JDBCUtil.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
		return totalCount;
	}
	
	/**
	 * 根据字段搜索数据
	 */
	@Override
	public List<Drink> findDrinkByName(int currentPage, int currentCount, String searchfield) {
		List<Drink> list = new  ArrayList<>();
		try {
			// 获取数据库连接对象
			Connection conn = JDBCUtil.getConnectinon();
			
			// 编写sql
			String sql = "SELECT * FROM drink WHERE DrinkName LIKE ? LIMIT ?,?";
			
			// 编译sql
			PreparedStatement ps = conn.prepareStatement(sql);
			
			// 执行查询
			ResultSet rs = ps.executeQuery();
			
			// 设置参数
			ps.setString(1, "'%" + searchfield + "%'");
			ps.setInt(2, (currentPage - 1) * currentCount);
			ps.setInt(3, currentCount);
			
			// 执行查询
			ResultSet rs = ps.executeQuery();
			
			// 循环结果集
			while (rs.next()) {
				Drink d = new Drink();
				d.setDrinkID("drinkID");
				d.setDrinkName("DrinkName");
				
				
				//把对象添加到集合中取
				list.add(p);
			}
						
			// 关闭
			JDBCUtil.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
		return null;
	}

}
