package com.web.biz;

import com.web.entity.Drink;
import com.web.util.PageBean;

public interface ProductBiz {
	/**
	 * 根据名称模糊查询
	 * @param currentPage
	 * @param currentCount
	 * @param searchfield
	 * @return
	 */
	public PageBean findDrinkByName(int currentPage,int currentCount,String searchfield);
	
	/**
	 * 根据id查询商品详情
	 * @param id
	 * @return
	 */
	public Drink findDrinkById(int id);
}
